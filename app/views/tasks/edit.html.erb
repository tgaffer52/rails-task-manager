<div class="container">
  <h1>Create a task</h1>
  <%= form_with model: @task do |f| %>
  <div class="mb-3">
    <%= f.label :title, {class: 'form-label'} %>
    <%= f.text_field :title, {class: 'form-control', value: @task.title} %>
  </div>

  <div class="mb-3">
    <%= f.label :details, {class: 'form-label'} %>
    <%= f.text_area :details, {class: 'form-control', value: @task.details} %>
  </div>

    <div class="mb-3">
    <%= f.check_box :completed, {class: 'form-check-input'} %>
    <%= f.label :completed, {class: 'form-check-label'} %>
  </div>

  <%= f.submit 'Edit Task', class: "btn btn-primary" %>
  <% end %>
</div>
